<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="7dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        app:cardBackgroundColor="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/nomeUnidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UBS Morro da Liberdade"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/diasEspera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 dias de despera"
                android:layout_below="@id/nomeUnidade"/>

            <TextView
                android:id="@+id/dataAtendimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04/11/2016"
                android:textStyle="bold"
                android:layout_below="@id/diasEspera"/>

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:numStars="5"
                android:rating="3.0"
                android:stepSize="1.0"
                android:layout_alignRight="@id/diasEspera"
                android:layout_below="@id/nomeUnidade"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>